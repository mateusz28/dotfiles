#!/bin/bash
fag() {
  local file
  local line

  FZFARG=""
  [ "$@" == "." ] || FZFARG="-q $@"
  read -r file line <<<"$(ag -0 --nobreak --noheading "$@" | fzf -0 -1  --delimiter : --preview 'bat --color "always" -p {1} -H {2} ' --preview-window '+{2}-5' -e $FZFARG | awk -F: '{print $1, $2}')"

  if [[ -n $file ]]
  then
    nvim $file +$line
  fi
}

[ $# -lt 1 ] && ARG="." || ARG="$@"

fag "$ARG"
