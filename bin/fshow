#!/bin/bash
if [[ "$OSTYPE" == "darwin"* ]]; then
  XARGS_LIMIT="-S4096"
else
  XARGS_LIMIT=""
fi
fshow() {
  preview="echo {} | grep -o '[a-f0-9]\{7\}' | head -1 | xargs -I % sh -c 'git diff-tree --color=always --compact-summary --no-commit-id -r % && echo -e \"\n -----diff----- \n\" && git show --color=always %'"
  #preview="echo {} | grep -o '[a-f0-9]\{7\}' | head -1 | xargs -I % sh -c 'git show --color=always % -- $@'"
  git log --graph --color=always \
      --format="%C(auto)%h%d %s %C(black)%C(bold)%cr" |
  fzf --ansi --no-sort --reverse --preview-window=nohidden --preview "$preview" --tiebreak=index --bind=ctrl-s:toggle-sort \
      --bind "ctrl-m:execute:
                (grep -o '[a-f0-9]\{7\}' | head -1 |
                  xargs $XARGS_LIMIT -I % sh -c 'git diff-tree --no-commit-id --name-only -r % | 
                  fzf --reverse --preview-window=nohidden --preview \"git show --color=always % -- \{}\" --bind \"ctrl-m:execute:(echo \{} | 
                  xargs -I ^ sh -c \\\"git difftool -y %~1 -- ^\\\")\"') << 'FZF-EOF'
                {}
FZF-EOF"
}

fshow_single() {
  #preview="git show --color=always {2} -- $@"
  preview="echo {} | grep -o '[a-f0-9]\{7\}' | head -1 | xargs -I % sh -c 'git show --color=always % -- $@'"
  git log --graph --color=always \
      --format="%C(auto)%h%d %s %C(black)%C(bold)%cr" "$@" |
  fzf --ansi --no-sort --reverse --preview-window=nohidden --preview "$preview" --tiebreak=index --bind=ctrl-s:toggle-sort \
      --bind "ctrl-m:execute:
                (grep -o '[a-f0-9]\{7\}' | head -1 |
                xargs -I % sh -c 'git difftool -y %~1 -- $@') << 'FZF-EOF'
                {}
FZF-EOF"
}

fshow_search() {
  local search_pattern="$1"
  preview="echo {} | grep -o '[a-f0-9]\{7\}' | head -1 | xargs -I % sh -c 'git show --color=always % | grep -C 3 --color=always \"$search_pattern\"'"
  
  git log --graph --color=always \
      --format="%C(auto)%h%d %s %C(black)%C(bold)%cr" \
      --grep="$search_pattern" --all-match |
  fzf --ansi --no-sort --reverse --preview-window=nohidden --preview "$preview" --tiebreak=index \
      --bind=ctrl-s:toggle-sort
}

is_in_git_repo() {
  git rev-parse HEAD > /dev/null 2>&1
}
is_in_git_repo || { echo "Not in a git dir"; exit 1; }

cd $(git rev-parse --show-toplevel)
if [ $# -eq 0 ]; then
  fshow
else 
  if [ "$1" = "--search" ] && [ $# -eq 2 ]; then
    fshow_search "$2"
  elif [ -f "$@" ]; then 
    fshow_single "$@"
  else
    echo "Usage: $0 [--search PATTERN] [FILE]"
    echo "  --search PATTERN  Search through commit messages and file content"
    echo "  FILE              Show commits for specific file"
    exit 1
  fi
fi
