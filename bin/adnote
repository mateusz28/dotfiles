#!/bin/bash
mkdir -p ~/notes/
echo -ne "#Quicknote: "
read
cd $HOME/notes/
git pull origin main
#[ $# -gt 0 ] && SUFFIX="_$1" || SUFFIX=""
NOTES_NAME=$(date +notes_%Y-%m-%d_${HOSTNAME}.md)
echo "# $REPLY" >> $HOME/notes/$NOTES_NAME
echo "$@" >> $HOME/notes/$NOTES_NAME
echo "" >> $HOME/notes/$NOTES_NAME
git add .
git commit -m "Update ${NOTES_NAME}"
git push origin main
